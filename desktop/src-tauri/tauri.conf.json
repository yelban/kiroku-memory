{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kiroku Memory",
  "version": "0.1.24",
  "identifier": "com.kiroku.memory",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:ci"
  },
  "app": {
    "windows": [
      {
        "title": "Kiroku Memory",
        "width": 900,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../tools/packaging/dist/current/python": "python",
      "../../kiroku_memory": "app/kiroku_memory",
      "../../tools/packaging/entrypoints": "app/entrypoints"
    },
    "category": "DeveloperTool",
    "shortDescription": "AI Agent Long-term Memory System",
    "longDescription": "Kiroku Memory is a tiered retrieval memory system for AI Agents. It provides structured storage, semantic search, and automatic summarization for persistent agent memory.",
    "copyright": "Copyright 2025 yelban",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": "-",
      "providerShortName": "TXU8UPLYJP",
      "infoPlist": "Info.plist",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 },
        "background": "images/dmg-background.png"
      }
    },
    "windows": {
      "wix": null,
      "nsis": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
