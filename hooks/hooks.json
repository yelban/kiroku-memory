{
  "description": "Kiroku Memory hooks for automatic context loading and smart memory saving",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/session-start-hook.py",
            "timeout": 5,
            "statusMessage": "Loading Kiroku Memory..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/stop-hook.py",
            "timeout": 10,
            "async": true
          }
        ]
      }
    ]
  }
}
